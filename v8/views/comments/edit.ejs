<!-- To include header.ejs -->
<%- include ("../partials/header") %>
<div class="container">
  <div class="row">
    

    <div style="width: 30%; margin: 50px auto">
      <h2 style="text-align: center">Edit Comment</h2>
      <form
        action="/campgrounds/<%= campground_id %>/comments/<%= foundComment._id %>?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[text]"
            value="<%= foundComment.text %>"
          />
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

<!-- To include footer.ejs -->
<%- include ("../partials/footer") %>
